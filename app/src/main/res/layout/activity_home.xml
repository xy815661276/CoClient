<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_white"
    android:orientation="vertical">


    <include layout="@layout/toolbar_mainpage" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/container_main_srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/runningHeader"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:background="@color/running">

                    <ImageView
                        android:id="@+id/runningIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/running"/>

                    <TextView
                        android:id="@+id/runningLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Running containers"
                        android:textColor="@color/white"
                        android:layout_marginRight="15dp"
                        android:textSize="18dp"
                        android:layout_above="@+id/running"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/running"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Undefined"
                        android:textSize="22dp"
                        android:textColor="@color/white"
                        android:layout_marginRight="15dp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/stoppedHeader"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/runningHeader"
                    android:background="@color/stopped">

                    <ImageView
                        android:id="@+id/stoppedIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/stop"/>

                    <TextView
                        android:id="@+id/stoppedLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stopped containers"
                        android:textColor="@color/white"
                        android:layout_marginRight="15dp"
                        android:textSize="18dp"
                        android:layout_above="@+id/stopped"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/stopped"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Undefined"
                        android:textSize="22dp"
                        android:textColor="@color/white"
                        android:layout_marginRight="15dp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/imagesHeader"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/stoppedHeader"
                    android:background="@color/images">

                    <ImageView
                        android:id="@+id/imagesIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/image"/>

                    <TextView
                        android:id="@+id/imagesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Images"
                        android:textColor="@color/white"
                        android:layout_marginRight="15dp"
                        android:textSize="18dp"
                        android:layout_above="@+id/images"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/images"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Undefined"
                        android:textSize="22dp"
                        android:textColor="@color/white"
                        android:layout_marginRight="15dp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/osHeader"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/imagesHeader"
                    android:background="@color/os">

                    <ImageView
                        android:id="@+id/osIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/os"/>

                    <TextView
                        android:id="@+id/osLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OS"
                        android:textColor="@color/white"
                        android:layout_marginRight="15dp"
                        android:textSize="18dp"
                        android:layout_above="@+id/os"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/os"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android"
                        android:textSize="22dp"
                        android:textColor="@color/white"
                        android:layout_marginRight="15dp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </RelativeLayout>


        </ScrollView>
    </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout
        xmlns:rfal="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main_rfal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        rfal:rfal_frame_color="#ffffff"
        rfal:rfal_frame_alpha="0.7"
        >
        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton
            xmlns:rfab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_main_rfab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:padding="8dp"
            rfab:rfab_size="normal"
            rfab:rfab_drawable="@drawable/rfab__drawable_rfab_default"
            rfab:rfab_color_normal="#37474f"
            rfab:rfab_color_pressed="#263238"
            rfab:rfab_shadow_radius="7dp"
            rfab:rfab_shadow_color="#999999"
            rfab:rfab_shadow_dx="0dp"
            rfab:rfab_shadow_dy="5dp"
            />
    </com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>

</FrameLayout>
