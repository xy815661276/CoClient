<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/mainPage_background_white"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:id="@+id/dockerHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey">

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/dockerIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/container"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/containerTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="container name"
                    android:textColor="@color/black"
                    android:layout_marginRight="15dp"
                    android:textSize="22dp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_above="@+id/imageTV"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/imageTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="images"
                    android:gravity="right"
                    android:layout_toRightOf="@+id/dockerIcon"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>

                <RelativeLayout
                    android:layout_below="@+id/imageTV"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="20dp">

                    <TextView
                        android:id="@+id/dot"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/dot"/>

                    <ImageView
                        android:id="@+id/time_logo"
                        android:layout_toEndOf="@+id/dot"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/time_dark"/>

                    <TextView
                        android:id="@+id/timeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/time_logo"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:text="Up 18 hours"/>
                </RelativeLayout>


            </LinearLayout>


            <ImageView
                android:id="@+id/menu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/menu"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info"
            app:cardBackgroundColor="@color/networkout"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_container_delete"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Delete"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginStart="3dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>